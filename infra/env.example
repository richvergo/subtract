# =============================================================================
# BACKEND STABILITY - REQUIRED ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local in the project root and fill in your values
# All variables marked as REQUIRED must be set for the backend to function

# =============================================================================
# DATABASE - REQUIRED
# =============================================================================
# SQLite database URL for local development (recommended)
# For production, use PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL="file:./prisma/dev.db"

# =============================================================================
# NEXT.AUTH - REQUIRED
# =============================================================================
# Secret key for NextAuth.js session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# NextAuth base URL (defaults to localhost:3000 in development)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# REDIS - OPTIONAL (for queue functionality)
# =============================================================================
# Redis URL for job queue (agents will use in-memory fallback if not set)
# Format: redis://localhost:6379/0
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# ENCRYPTION - OPTIONAL
# =============================================================================
# Base64 encoded encryption key for sensitive data
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY_BASE64="your-32-byte-base64-encryption-key-here"

# =============================================================================
# API CONFIGURATION - OPTIONAL
# =============================================================================
# Base URL for API endpoints (defaults to /api)
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

# API URL for frontend components (defaults to empty string for relative URLs)
NEXT_PUBLIC_API_URL=""

# =============================================================================
# PUPPETEER - OPTIONAL (for agent automation)
# =============================================================================
# Skip Chromium download during npm install
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Path to Chrome/Chromium executable (if not using default)
# PUPPETEER_EXECUTABLE_PATH="/usr/bin/google-chrome-stable"

# =============================================================================
# ENVIRONMENT - OPTIONAL
# =============================================================================
# Node environment (development, production, test)
NODE_ENV="development"

# Disable database audit logging (set to '1' for tests)
# DISABLE_DB_AUDIT=1