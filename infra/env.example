# Environment Variables for Agents MVP
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://app:password@localhost:5432/agents

# Redis
REDIS_URL=redis://localhost:6379/0

# Encryption (generate with: openssl rand -base64 32)
ENCRYPTION_KEY_BASE64=your-32-byte-base64-encryption-key-here

# Internal API token (generate with: openssl rand -hex 32)
INTERNAL_RUNNER_TOKEN=your-random-long-secret-token-here

# File Storage
FILE_STORAGE_DIR=/data/agent_outputs

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# API Base URL (for frontend)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Puppeteer
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Environment
NODE_ENV=development
