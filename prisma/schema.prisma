generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  DONE
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  passwordHash String
  name         String?
  createdAt    DateTime    @default(now())
  months       MonthClose[]
}

model MonthClose {
  id             String         @id @default(cuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  label          String
  startDate      DateTime
  endDate        DateTime
  createdAt      DateTime       @default(now())
  tasks          Task[]
  checklistItems ChecklistItem[]

  @@unique([userId, label], name: "userId_label")
}

model ChecklistItem {
  id        String   @id @default(cuid())
  monthId   String
  month     MonthClose @relation(fields: [monthId], references: [id])
  title     String
  assignee  String?
  dueDate   DateTime?
  status    Status   @default(NOT_STARTED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]

  @@index([monthId])
}

model Task {
  id             String        @id @default(cuid())
  monthId        String
  month          MonthClose    @relation(fields: [monthId], references: [id])
  checklistItemId String?
  checklistItem  ChecklistItem? @relation(fields: [checklistItemId], references: [id])
  title          String
  assignee       String?
  dueDate        DateTime?
  status         Status        @default(NOT_STARTED)
  notes          String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([monthId])
  @@index([checklistItemId])
}
